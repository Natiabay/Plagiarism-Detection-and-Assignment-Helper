# Academic Assignment Helper & Plagiarism Detector
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
POSTGRES_DB=academic_helper
POSTGRES_USER=student
POSTGRES_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_min_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# n8n Webhook URLs (n8n Cloud)
N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/plagiarism-check
N8N_TEACHER_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/teacher-notify

# Teacher Email (for notifications)
TEACHER_EMAIL=instructor@example.com

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# OpenAI Model Configuration
EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MODEL=gpt-4

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
